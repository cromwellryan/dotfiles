[user]
	name = Ryan Cromwell
	email = ryan@heysparkbox.com
[alias]
	st = status
	co = checkout
	cm = commit
	cia = commit --amend -C HEAD
	a = add -p .
	b = branch
	pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
  po = push origin master
	hist = !git --no-pager log -n 20 --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  remove = remote

[core]
	excludesfile = /Users/ryan/.gitignore_global
	editor = /usr/local/bin/vim
[init]
	templatedir = ~/.git_template
[commit]
	template = /Users/ryan/.gitmessage.txt
[credential]
	helper = cache --timeout=1800
